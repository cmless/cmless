{
  "name": "cmless",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./src/index.js",
  "bin": {
    "cmless": "./bin/cmless"
  },
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile": "webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "start": "webpack-dev-server --port 3000 --history-api-fallback",
    "test": "nodeunit ./src/build.test.js",
    "test:watch": "onchange \"src/*.js\" -- npm test"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.17",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.30.1",
    "postcss-cssnext": "3.0.2",
    "postcss-loader": "2.0.8",
    "style-loader": "0.19.0",
    "var": "0.3.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3",
    "webpack-null-plugin": "0.0.2",
    "webpack-pwa-manifest": "3.3.2",
    "workbox-webpack-plugin": "2.1.0"
  },
  "cmless": {
    "//": "Example cmless configuration - use in your own project's package.json file",
    "define": {
      "process.env": {
        "UNREGISTER_SERVICE_WORKERS": true
      }
    },
    "build": {
      "bundles": {
        "app": "./src/app.ts",
        "vendor": true
      },
      "template": "./src/index.ejs",
      "dir": "./build",
      "serviceWorker": "./build/service-worker.js"
    },
    "css": {
      "variables": {
        "animationDuration": "0.3s",
        "primary": "blue",
        "neutral": "grey"
      }
    },
    "router": {
      "ignoreTrailingSlash": true,
      "routes": [
        { "key": "Home",        "path": "/",              "title": "My App"                        },
        { "key": "About",       "path": "/about",         "title": "{{Home}} - About"              },
        { "key": "UserList",    "path": "/users",         "title": "{{Home}} - Users"              },
        { "key": "UserDetails", "path": "/users/:userId", "title": "{{Home}} - {{Home.user.name}}" },
        { "key": "NotFound",    "path": "/:url",          "title": "{{Home}} - Not Found"          }
      ]
    },
    "pwa": {
      "manifest": {
        "name": "my-app"
      }
    },
    "deploy": {
      "firebase": {
        "projectId": "my-app-firebase-project-id"
      }
    }
  }
}
