{
  "name": "cmless",
  "version": "0.7.2",
  "license": "MIT",
  "main": "./src/index.js",
  "bin": {
    "cmless": "./bin/cmless"
  },
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile": "webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "test": "jest",
    "test.watch": "jest --watchAll"
  },
  "dependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "connect-history-api-fallback": "^1.5.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "koa-connect": "^2.0.1",
    "lodash": "^4.17.10",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.1.0",
    "typescript": "^3.0.0",
    "webpack": "^4.16.5",
    "webpack-pwa-manifest": "^3.6.2",
    "webpack-serve": "^0.3.1",
    "workbox-webpack-plugin": "^3.0.1"
  },
  "devDependencies": {
    "jest": "^22.4.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!bin/**",
      "!node_modules/**",
      "!**/*.config.js",
      "!**/*.spec.js",
      "**/*.js"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "cmless": {
    "//": "Default cmless configuration - override in your own project's package.json file",
    "port": 3000,
    "input": "src",
    "template": "${input}/index.html",
    "script": "${input}/index.js",
    "style": "${input}/style.js",
    "pwa": "${input}/pwa.js",
    "env": {},
    "assets": [
      "jpeg",
      "jpg",
      "ico",
      "gif",
      "png",
      "svg",
      "wav",
      "mp3",
      "json"
    ],
    "output": "build",
    "clean": [
      "${output}/*"
    ],
    "serviceWorker": {
      "globDirectory": "${output}",
      "globPatterns": [
        "**/*.{html,js,css}"
      ],
      "swDest": "service-worker.js"
    },
    "target": {
      "browsers": [
        "> 0.25%",
        "not ie 11",
        "not op_mini all"
      ]
    }
  }
}
