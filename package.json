{
  "name": "cmless",
  "version": "0.2.2",
  "license": "MIT",
  "main": "./src/index.js",
  "bin": {
    "cmless": "./bin/cmless"
  },
  "scripts": {
    "build": "webpack -p --env.production --display-modules",
    "profile": "webpack --profile --json > ./build/profile.json && webpack-bundle-analyzer ./build/profile.json",
    "start": "webpack-dev-server --port 3000 --history-api-fallback"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.8",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2",
    "typescript-require": "nikolaykhodov/typescript-require#master",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "var": "^0.3.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-pwa-manifest": "^3.3.2",
    "workbox-webpack-plugin": "^2.1.0"
  },
  "cmless": {
    "//": "Example cmless configuration - copy and customize in your own project's package.json file",
    "output": "build",
    "clean": [
      "build/*"
    ],
    "script": "src/index.js",
    "template": "src/index.ejs",
    "style": "src/style.js",
    "assets": [
      "jpeg",
      "jpg",
      "ico",
      "gif",
      "png",
      "svg",
      "wav",
      "mp3",
      "json"
    ],
    "define": {
      "process.env.NODE_ENV": "production"
    },
    "pwa": "src/pwa.js",
    "service-worker": {
      "globDirectory": "build",
      "globPatterns": [
        "**/*.{html,js,css}"
      ],
      "swDest": "build/service-worker.js"
    }
  }
}
